<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".BlankFragment">


    <TextView
            android:text="Åžifre Yenileme "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textView2" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:textSize="24sp" android:textStyle="bold"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/etFragmentEmail" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:hint="Email Address"/>
    <Button
            android:text="Close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnFragmentClose" app:layout_constraintStart_toStartOf="@+id/etFragmentEmail"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/etFragmentEmail" app:layout_constraintEnd_toStartOf="@+id/btnFragmentSend"
            android:layout_marginEnd="8dp" android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
    <Button
            android:text="Send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnFragmentSend" app:layout_constraintEnd_toEndOf="@+id/etFragmentEmail"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/etFragmentEmail"
            app:layout_constraintStart_toEndOf="@+id/btnFragmentClose"
            android:layout_marginStart="8dp" android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
</android.support.constraint.ConstraintLayout>